@using System.Configuration
@using System.Web.Optimization

@{
  Layout = null;
  var action = ((string)ViewContext.RouteData.Values["Action"]).ToLower();
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/styles.css")
    @Styles.Render("~/Content/bootstrap/bootstrap.min.css")
    @Styles.Render("~/Content/bootstrap/bootstrap-theme.min.css")
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="@Url.Content("~/Scripts/assets/js/html5shiv.js")"></script>
      <script src="@Url.Content("~/Scripts/assets/js/respond.min.js.js")"></script>
    <![endif]-->
    @RenderSection("head", required: false)
</head>
<body>
    <div id="wrap">
        @Html.Partial("~/Views/Shared/_Navbar.cshtml")
        <div class="container">
                
            @if(IsSectionDefined("Sidebar"))
            {
                <div id="body" class="col-md-9">
                    @RenderBody()
                </div>
                <div class="col-md-3 " id="sidebars">
                    @RenderSection("Sidebar")
                </div>
            }
            else
            {
                @RenderBody()
            }
        </div>
    </div>
    <div id="footer">
      <div class="container">
        <p class="text-muted credit">@DateTime.Now.Year, &copy PhotoBook</p>
      </div>
    </div>
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>