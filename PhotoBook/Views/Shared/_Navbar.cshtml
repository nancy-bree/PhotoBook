<div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("PhotoBook", "Index", "PhotoBook", null, new { @class = "navbar-brand"})
          </div>
          <div class="collapse navbar-collapse">
              @if (Request.IsAuthenticated)
              {
                  <ul class="nav navbar-nav">
                      <li>@Html.ActionLink("Albums", "UserAlbum", "PhotoBook")</li>
                      <li>@Html.ActionLink("My Photos", "Photos", "PhotoBook", 
                                            new { id = @WebSecurity.CurrentUserId}, null)
                      </li>
                      <li>@Html.ActionLink("Upload", "Upload", "Photo")</li>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("Manage", "Account")">
                            <span class="glyphicon glyphicon-pencil" style="font-size:12pt;"></span>
                            &nbsp;@User.Identity.Name
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("LogOff", "Account")">
                            <span class="glyphicon glyphicon-log-out" style="font-size:12pt;"></span>
                            &nbsp;Log off
                        </a>
                    </li>
                </ul>
              } 
              else 
              {
                  <ul class="nav navbar-nav">
                      <li>@Html.ActionLink("Albums", "UserAlbum", "PhotoBook")</li>
                  </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("Register", "Account")">
                            <span class="glyphicon glyphicon-check" style="font-size:12pt;"></span>&nbsp;
                            Register
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Login", "Account")">
                            <span class="glyphicon glyphicon-log-in" style="font-size:12pt;"></span>&nbsp;
                            Log in
                        </a>
                    </li>
                </ul>
            }
          </div><!--/.nav-collapse -->
        </div>
</div>